{
  "schemas": {
    "version": "1.0.0",
    "configure": {
      "default-config": {
        "title": "Default Config",
        "type": "object",
        "properties": {
          "options": {
            "title": "Options",
            "type": "object",
            "properties": {
              "interval": {
                "title": "Interval in ms",
                "type": "number",
                "default": 500
              }
            },
            "required": ["interval"]
          },
          "events": {
            "title": "Configure Events",
            "type": "object",
            "properties": {
              "accelerometer": {
                "title": "Accelerometer",
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": ["enabled"]
              },
              "imu": {
                "title": "IMU",
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": ["enabled"]
              },
              "gyroscope": {
                "title": "Gyoscope",
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": ["enabled"]
              },
              "orientation": {
                "title": "Orientation",
                "type": "object",
                "properties": {
                  "enabled": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "required": ["enabled"]
              }
            }
          }
        },
        "required": ["options"]
      }
    },
    "message": {
      "myo-action": {
        "type": "object",
        "properties": {
          "command": {
            "type": "object",
            "properties": {
              "action": {
                "title": "Action",
                "type": "string",
                "enum": [
                  "vibrate",
                  "requestBlueToothStrength",
                  "zeroOrientation"
                ],
                "default": "vibrate"
              },
              "vibrationLength": {
                "title": "Vibration Length",
                "type": "string",
                "enum": [
                  "short",
                  "medium",
                  "long"
                ],
                "default": "short"
              }
            }
          }
        }
      }
    }
  }
}
